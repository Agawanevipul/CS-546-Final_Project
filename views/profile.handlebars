<div class="container mt-5">
    <div id="profilebg" class="row border rounded shadow-lg">
        <div class="col-md-4 text-center py-4 border-right">
            <img src="/public/images/defaultProfile.png" class="img-fluid rounded-circle mb-4" id="profileImg" />
        </div>

        <div class="col-md-8 py-4">
            <h1 class="mb-4">Profile</h1>
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th scope="row">Email</th>
                        <td id="email_id">{{details.emailId}}</td>
                    </tr>
                    <tr>
                        <th scope="row">First Name</th>
                        <td id="first_name">{{details.firstName}}</td>
                    </tr>
                    <tr>
                        <th scope="row">Last Name</th>
                        <td id="last_name">{{details.lastName}}</td>
                    </tr>
                    <tr>
                        <th scope="row">CWID</th>
                        <td id="cwid">{{details.cwid}}</td>
                    </tr>
                    <tr>
                        <th scope="row">Courses</th>
                        <td id="courses">{{details.courses}}</td>
                    </tr>
                    <tr>
                        <th scope="row">Program</th>
                        <td id="program">{{details.program}}</td>
                    </tr>
                    <tr>
                        <th scope="row">Semester</th>
                        <td id="sem">{{details.sem}}</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>
