<section id="registration_form" class="form my-4 mx-5">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-lg-5">
            <img src="/public//images /registration_copy.jpg" class="img-fluid" alt="" />
          </div>
          <div class="col-lg-7 px-5 pt-4">
            <h1 class="font-weight-bold py-1" id="login_red">{{title}}</h1>
            <!--<h4 id="sign_red">Register</h4>-->
            <form method="post" id="myForm">
              <div class="row pt-4">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      id="fname"
                      name="fname"
                      placeholder="First Name"
                      value="{{first_name}}"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      id="lname"
                      name="lname"
                      placeholder="Last Name"
                      value="{{last_name}}"
                    />
                  </div>
                </div>
              </div>
              <div class="row pt-2">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      id="emailId"
                      name="mail"
                      placeholder="abc@stevens.edu"
                      value="{{email_id}}"
                    />
                  </div>
                </div>
              </div>
              <div class="row pt-2">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="number"
                      class="form-control"
                      id="campusId"
                      name="campusId"
                      placeholder="Campus Wide ID (CWID)"
                      value="{{cwid}}"
                    />
                  </div>
                </div>
              </div>
              <div class="row pt-2">
                <div class="col-md-6">
                  <div class="form-group">
                    <select class="form-control" id="program" name="program" value="{{program_value}}">
                      <option value="" disabled selected>Select Degree</option>
                      <option value="btech">bachelor's</option>
                      <option value="ms">Master's</option>
                      <option value="phd">PHD</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <select class="form-control" id="major" name="major" value="{{major_value}}">
                      <option value="" disabled selected>Select Major</option>
                      <option value="CS">CS</option>
                      <option value="MIS">MIS</option>
                      <option value="CE">CE</option>
                      <option value="SW">SW</option>
                      <option value="ML">ML</option>
                      <option value="FE">FE</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row pt-2">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="password"
                      class="form-control"
                      id="create_pass"
                      name="create"
                      placeholder="Create Password"
                      value="{{password_value}}"
                    />
                  </div>
                </div>
              </div>
              <div class="row pt-2">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="password"
                      class="form-control"
                      id="confirm_pass"
                      name="confirm"
                      placeholder="Confirm Password"
                    />
                  </div>
                </div>
              </div>
              {{#if error }}
              <div class="form-group">
              <div class="alert alert-danger">
              {{ error }}
              </div>
              </div>
              {{/if}}
              <div class="row pt-4">
                <div class="col-lg-6 mx-auto text-center">
                  <button type="submit" class="btn1">Submit</button>
                </div>
              </div>
               
      <div class="form-group">
        <div class="alert alert-success">
          {{ result }}
        </div>
      </div>
              <p class="text-center">
                Already have an account?
                <a class="toggle" href="##">Login</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </section>